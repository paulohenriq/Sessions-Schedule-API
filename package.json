{
  "name": "sessions-schedule-api",
  "version": "1.0.0",
  "description": "This project is an application challenge for professionals to manage their session schedules, providing time slots for clients to schedule appointments.",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && NODE_ENV=${NODE_ENV:-staging} babel server -d dist/server -D -s && NODE_ENV=${NODE_ENV:-staging} babel configs -d dist/configs -D -s && NODE_ENV=${NODE_ENV:-staging} babel versions -d dist/versions -D -s",
    "start": "npm run start:dist",
    "start:dist": "NODE_ENV=${NODE_ENV:-staging} npm run build && NODE_ENV=${NODE_ENV:-staging} node dist/server/index.js",
    "dev": "cross-env NODE_ENV=development nodemon server/index.js",
    "prod": "cross-env NODE_ENV=staging server/index.js",
    "debug": "cross-env NODE_ENV=development nodemon --inspect server/index.js",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:verbose": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:ci": "npm test -- --coverage",
    "lint": "eslint ./versions/v*/src/**/*.js ./server/**/*.js ./configs/*.js",
    "lint:fix": "npm run lint -- --fix",
    "postinstall": "npm run start:dist"
  },
  "keywords": [],
  "author": "paulohenriq",
  "license": "ISC",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/multer": "^3.0.0",
    "@koa/router": "^8.0.8",
    "app-module-path": "^2.2.0",
    "assert": "^2.0.0",
    "axios": "^0.19.2",
    "bluebird": "^3.7.2",
    "dotenv": "^8.2.0",
    "form-data": "^3.0.0",
    "knex": "^0.21.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-compose": "^4.1.0",
    "koa-json-error": "^3.1.2",
    "koa-oas3": "^0.18.0",
    "load-json-file": "^6.2.0",
    "lodash": "^4.17.19",
    "log4js": "^6.1.2",
    "moment": "^2.27.0",
    "mongodb-memory-server": "^6.4.1",
    "mongoose": "^5.9.5",
    "mongoose-paginate-v2": "^1.3.6",
    "multer": "^1.4.2",
    "require-all": "^3.0.0",
    "swagger-parser": "^9.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/register": "^7.8.3",
    "@types/jest": "^25.1.4",
    "babel-eslint": "^10.0.3",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "commitizen": "^4.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-json": "^2.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "nodemon": "^2.0.2",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint:fix && npm run test",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run test:ci"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
